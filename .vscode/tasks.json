{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build ${fileBasenameNoExtension}",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g", "${file}"
            ],
            "problemMatcher": [
                "$gcc" 
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}